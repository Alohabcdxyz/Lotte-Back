@model LotteriaView.Models.RegisterViewModel

<div class="row">
    <div class="col-2"></div>

    <div class="col-4 register">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tên người dùng hoặc Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input style="width: 100%" type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </form>

        <span class="line">
            <h3>Hoặc đăng nhập bằng</h3>
        </span>
        <div class="api-login">
            <div class="fb">
                <img src="~/img/fb.png" />
            </div>
            <div class="fb">
                <img src="~/img/gg.png" />
            </div>
        </div>
    </div>
    <div class="col-4 img-register">
        <img src="~/img/login-banner.jpg" />
    </div>
    <div class="col-2"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
